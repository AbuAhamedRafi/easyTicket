# Django Secret Key
SECRET_KEY=your-secret-key-here-change-in-production

# Debug Mode
DEBUG=True

# Allowed Hosts (comma separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
# Use 'db' for Docker PostgreSQL container
# Use 'host.docker.internal' to connect to local PostgreSQL from Docker
# Use 'localhost' if running Django locally (not in Docker)
DB_NAME=easyticket_db
DB_USER=postgres
DB_PASSWORD=postgres123
DB_HOST=host.docker.internal
DB_PORT=5432

# Email Configuration
# For Gmail SMTP:
# 1. Enable 2-Step Verification in your Google Account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the App Password below (not your regular Gmail password)
# 
# Use console backend for development (prints emails to terminal)
# Use smtp backend for production (actually sends emails)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-character-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:3000

# Stripe Payment Gateway Configuration
# Get your keys from: https://dashboard.stripe.com/test/apikeys
# Publishable key (starts with pk_test_) - safe to use in frontend
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
# Secret key (starts with sk_test_) - NEVER expose in frontend
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
# Webhook secret (starts with whsec_) - get from Stripe CLI or Dashboard
# Instructions: See setup guide below
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
# Service fee percentage (default 5%)
STRIPE_SERVICE_FEE_PERCENTAGE=5.0
